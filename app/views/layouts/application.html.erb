<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css'  %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header id="header" class="header">
      <div class="container">
        <nav>
          <p class="header-title">Bookers</p>
          <% if user_signed_in? %>
            <ul class="list-inline header-lists">
              <li>
                <%= link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home header-list-icon" %>
              </li>
              <li>
                <%= link_to "Users", users_path, class: "glyphicon glyphicon-user header-list-icon" %>
              </li>
              <li>
                <%= link_to "Books", books_path, class: "glyphicon glyphicon-book header-list-icon" %>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, method: :delete,class: "glyphicon glyphicon-log-out header-list-icon" %>
              </li>
            </ul>
          <% else %>
            <ul class="list-inline header-lists">
              <li>
                <%= link_to "Home", root_path, class: "glyphicon glyphicon-home header-list-icon" %>
              </li>
              <li>
                <%= link_to "about", home_about_path, class: "glyphicon glyphicon-link header-list-icon" %>
              </li>
              <li>
                <%= link_to "sign up", new_user_registration_path, class: "glyphicon glyphicon-edit header-list-icon" %>
              </li>
              <li>
                <%= link_to "login", new_user_session_path, class: "glyphicon glyphicon-log-in header-list-icon" %>
              </li>
            </ul>
          <% end %>
        </nav>
      </div>
    </header><!-- /header -->
    <div class="container"> 
      <% flash.each do |key, value| %> 
      <%= content_tag(:div, value, class: "#{key}") %> 
      <% end %>
     </div>
    <%= yield %>
  </body>
</html>
