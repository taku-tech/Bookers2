<div class="container">
	<!-- <p id="notice"></p> -->
	<%= render 'books/error_message', error: @new_post %>
	<div class="row">
		<div class="col-lg-3">
			<%= render 'users/sidebar', user: @user, new_post: @new_post %>
		</div>
		<div class="col-lg-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg",  size: "50x50"%></td>
							<td><%= link_to book.title, book_path(book) %></td>
							<td><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>