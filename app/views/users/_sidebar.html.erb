<!-- ユーザ情報 -->
<div class="user-info-wrapper">
	<h2>User info</h2>
	<%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg",  size: "100x100"%>
	<table>
			<tr>
				<th>name</th>
				<td><%= user.name %></td>
			</tr>
			<tr>
				<th>introduction</th>
				<td><%= user.introduction %></td>
			</tr>
	</table>
	<%= link_to content_tag(:i, '', class: 'glyphicon glyphicon-wrench'), edit_user_path(current_user.id) %>
</div>

<!-- 新規投稿フォーム -->
<div class="new-post-wrapper">
	<h2>New Book</h2>
	<%= form_with model: new_post, url: books_path, locla: true do |form| %>
		<p>Tile</p>
		<%= form.text_field :title %>
		<p>Opinion</p>
		<%= form.text_area :body %>

		<%= form.submit "Create Book" %>
	<% end %>
</div>